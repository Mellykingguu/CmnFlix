<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CmnFlix - Home</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/Home/favicon-32x32.png">
    <link rel="icon" href="/Home/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/fontawesome-free-6.4.2-web/css/all.min.css">
    <link rel="stylesheet" href="/bootstrap-5.0.2-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">    
</head>
<body>
    <div class="container">
        <h1 class="mt-5">My Movies</h1>
        <ul id="movie-list" class="list-group mt-3"></ul>
    </div>

    <script>
        fetch('/movies')
            .then(response => response.json())
            .then(data => {
                const movieList = document.getElementById('movie-list');
                data.forEach(movie => {
                    const li = document.createElement('li');
                    li.className = 'list-group-item';
                    li.textContent = `${movie.title} (${movie.release_year})`;
                    movieList.appendChild(li);
                });
            })
            .catch(error => console.error('Error fetching movies:', error));
    </script>
</body>
</html>